{
    "extends": "oclif",
    "rules": {
        "quotes": ["error", "double"],
        "indent": ["error", 4],
        // allow paren-less arrow functions
        "arrow-parens": 0,
        // allow async-await
        "generator-star-spacing": 0,
        "no-console": "off",
        "object-curly-spacing": [2, "always"],
        "semi": ["error", "always"]
    }
}
